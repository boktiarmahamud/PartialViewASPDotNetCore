@model IEnumerable<PartialViewASPDotNetCore.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="container">
    <div class="row">
        @foreach (var item in Model ?? System.Linq.Enumerable.Empty<PartialViewASPDotNetCore.Models.Product>())
        {
            <div class="col-md-4">
                <h3>@item.Name</h3>
                <p>@item.Description</p>
                <p>@item.Price.ToString("C")</p>
                <img src="~/images/@item.Image" alt="@item.Name" class="img-fluid" />
            </div>
        }
    </div>
</div>